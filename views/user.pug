extends layout

block content
  div.col-md-4.col-md-offset-4
    h1= title
    div= error
    div
      form(action="/user", method="POST")
        input.form-control(name="email", type="text", placeholder="email")
        input.mt-5.form-control(name="password", type="password", placeholder="Password")
        button.btn.btn-lg.btn-primary.mt-15.btn-block(type="submit") Create
    div.mt-15=resData
